# OmniAds Environment Variables Example
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=omniads
DB_PASSWORD=your_secure_password_here
DB_DATABASE=omniads

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string
JWT_EXPIRES_IN=7d

# AI Provider Configuration
AI_PROVIDER=anthropic  # or 'openai'

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# AI Configuration
AI_MAX_REQUESTS_PER_HOUR=10
AI_CACHE_TTL_SECONDS=3600
AI_REQUEST_TIMEOUT_MS=30000
AI_MAX_RETRIES=3
AI_MOCK_MODE=false  # Set to true to use mock AI responses

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
NODE_ENV=development
BACKEND_PORT=3000
FRONTEND_PORT=5173

# Frontend API URL
VITE_API_URL=http://localhost:3000

# External APIs (Mocked for MVP)
# Add your real API keys when ready to connect to real services
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_DEVELOPER_TOKEN=
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=
TIKTOK_APP_KEY=
TIKTOK_APP_SECRET=
TIKTOK_ACCESS_TOKEN=
TIENDA_NUBE_APP_ID=
TIENDA_NUBE_APP_SECRET=
TIENDA_NUBE_ACCESS_TOKEN=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=
